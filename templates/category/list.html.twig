{% extends 'base.html.twig' %}

{% block title %}ShowDB - Catégories{% endblock %}

{% block body %}
    <h2>Catégories</h2>
    <div class="list-group">
        {% for category in categories %}
            <a class="list-group-item list-group-item-action" href="{{ path('category_detail', {'label': category.label}) }}">{{ category.label }}</a>
        {% endfor %}
    </div>
{% endblock %}
